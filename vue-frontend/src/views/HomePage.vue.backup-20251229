<script setup>
import { ref } from 'vue'
import { storeToRefs } from 'pinia'
import { useBuildStore } from '@/stores/buildStore'

// ===== Pinia Store =====
const buildStore = useBuildStore()
const {
    playerBuild,
    targetBuild,
    comparisonResult,
    loading,
    currentStep,
    canCompare
} = storeToRefs(buildStore)

// ===== æœ¬åœ°ç‹€æ…‹ï¼ˆåƒ…ä¿ç•™çœŸæ­£éœ€è¦çš„ï¼‰ =====
const playerPobCode = ref('')
const targetPobCode = ref('')
const selectedStage = ref('mapping')

// ===== éšæ®µè¨­å®š =====
const stages = [
    { id: 'leveling', name: 'éç« ç¯€', level: 'Lv 28-68', targetLevel: 68 },
    { id: 'mapping', name: 'T0~T14', level: 'Lv 75-90', targetLevel: 80 },
    { id: 'endgame', name: 'T15~T17', level: 'Lv 95+', targetLevel: 95 },
    { id: 'custom', name: 'è‡ªè¨‚ç­‰ç´š', level: 'Custom', targetLevel: 90 }
]

// ===== æ–¹æ³• =====
const selectStage = (stageId) => {
    selectedStage.value = stageId
    console.log('âœ… é¸æ“‡éšæ®µ:', stageId)
}

const loadPlayerBuild = async () => {
    if (!playerPobCode.value.trim()) {
        alert('è«‹å…ˆè²¼ä¸Šä½ çš„ PoB ä»£ç¢¼')
        return
    }

    try {
        await buildStore.loadPlayerBuild(playerPobCode.value)
        alert('âœ… ä½ çš„è§’è‰²è¼‰å…¥æˆåŠŸï¼')
    } catch (error) {
        alert('âŒ è¼‰å…¥å¤±æ•—ï¼š' + error.message)
    }
}

const loadTargetBuild = async () => {
    if (!targetPobCode.value.trim()) {
        alert('è«‹å…ˆè²¼ä¸Šç›®æ¨™æµæ´¾çš„ PoB ä»£ç¢¼')
        return
    }

    try {
        await buildStore.loadTargetBuild(targetPobCode.value)
        alert('âœ… ç›®æ¨™æµæ´¾è¼‰å…¥æˆåŠŸï¼')
    } catch (error) {
        alert('âŒ è¼‰å…¥å¤±æ•—ï¼š' + error.message)
    }
}

const startComparison = async () => {
    if (!canCompare.value) {
        alert('è«‹å…ˆè¼‰å…¥å…©å€‹æµæ´¾')
        return
    }

    try {
        const stage = stages.find(s => s.id === selectedStage.value)
        await buildStore.compareBuild(selectedStage.value, stage.targetLevel)
        alert('âœ… æ¯”å°åˆ†æå®Œæˆï¼è«‹æŸ¥çœ‹ä¸‹æ–¹çµæœ')

        // æ»¾å‹•åˆ°çµæœå€åŸŸ
        setTimeout(() => {
            const resultSection = document.querySelector('section:last-child')
            if (resultSection) {
                resultSection.scrollIntoView({ behavior: 'smooth' })
            }
        }, 100)
    } catch (error) {
        alert('âŒ æ¯”å°å¤±æ•—ï¼š' + error.message)
    }
}

const formatNumber = (num) => {
    return num ? num.toLocaleString() : '0'
}
</script>

